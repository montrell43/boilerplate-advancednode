html
  head
    title FCC Advanced Node and Express
    meta(name='description', content='Home page')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/public/style.css')
  body
   h1.center FCC Advanced Node and Express

    h2.center #{title}
    p.center #{message}

    if showLogin
      h2.center Login
      form(action='/login', method='post').center
        label Username:
        input(type='text', name='username')
        label Password:
        input(type='password', name='password')
        input(type='submit', value='Log In')

    if showRegistration
      h2.center Register
      form(action='/register', method='post').center
        label Username:
        input(type='text', name='username')
        label Password:
        input(type='password', name='password')
        input(type='submit', value='Register')

    if showSocialAuth
      h2.center Social Login
      a(href='/auth/github') Login with GitHub
